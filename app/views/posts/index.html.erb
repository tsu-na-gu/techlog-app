<div class="mx-auto max-w-3xl px-5 py-16 sm:px-6 sm:plg:px-8">
    <div class="flex flex-row justify-between">
    <h2 class="text-2xl font-medium text-black">投稿一覧</h2>
    <%= link_to "新規投稿",
                new_post_path,
                class: "rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600",
                data: { turbo_frame: dom_id(Post.new)}
    %>
    </div>
    <%= turbo_frame_tag Post.new %>

    <%= turbo_frame_tag "posts" do %>
        <%= render @posts %>
    <% end %>

</div>