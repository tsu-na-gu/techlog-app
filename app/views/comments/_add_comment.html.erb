<%= form_with(model: [post, post.comments.build], local: true, class:"flex flex-row w-full") do |form| %>
  <%= form.text_area :body, class: "w-full" %>
  <%= form.hidden_field :post_id, value: post.id %>
  <%= form.submit "コメントを追加", class: "comment-toggle-button inline-flex items-center rounded-md bg-slate-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-600"%>
<% end %>